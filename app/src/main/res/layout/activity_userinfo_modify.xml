<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_181818">

    <TextView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:text="@string/skip"
        android:textColor="@color/c_ffffff"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xlong.libui.TDRelativeLayout
        android:id="@+id/layout_avatar"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:td_radius="100dp"
        app:td_solid_color="@color/c_2A2A2A">

        <com.xlong.libui.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/layout_add_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/add_avatar"
                android:textColor="@color/c_ffffff"
                android:textSize="14dp" />
        </LinearLayout>
    </com.xlong.libui.TDRelativeLayout>

    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_avatar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_nickname"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/info_input_nickname"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="@color/c_ACACAC"
            android:textColorHint="@color/c_6c6c6c"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_4d4d4d"
        app:layout_constraintTop_toBottomOf="@id/layout_nickname" />

    <RelativeLayout
        android:id="@+id/layout_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_identity"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp" />


        <com.xlong.libui.TDTextView
            android:id="@+id/tv_coach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/info_coach"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp"
            app:td_radius="2dp"
            app:td_solid_color="@color/c_2A2A2A" />

        <com.xlong.libui.TDTextView
            android:id="@+id/tv_amateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_coach"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/info_amateur"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp"
            app:td_radius="2dp"
            app:td_solid_color="@color/c_2A2A2A" />

        <com.xlong.libui.TDTextView
            android:id="@+id/tv_soccer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_amateur"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/info_soccer"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp"
            app:td_radius="2dp"
            app:td_solid_color="@color/c_2A2A2A" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_4d4d4d"
        app:layout_constraintTop_toBottomOf="@id/layout_identity" />

    <RelativeLayout
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_gender"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp" />

        <com.xlong.libui.TDTextView
            android:id="@+id/tv_woman"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/info_wuman"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp"
            app:td_radius="2dp"
            app:td_solid_color="@color/c_2A2A2A" />

        <com.xlong.libui.TDTextView
            android:id="@+id/tv_man"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@id/tv_woman"
            android:gravity="center"
            android:text="@string/info_man"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp"
            app:td_radius="2dp"
            app:td_solid_color="@color/c_2A2A2A" />

    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_4d4d4d"
        app:layout_constraintTop_toBottomOf="@id/layout_gender" />

    <LinearLayout
        android:id="@+id/layout_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_age"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edt_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/info_input_age"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/c_ACACAC"
            android:textColorHint="@color/c_6c6c6c"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/c_4d4d4d"
        app:layout_constraintTop_toBottomOf="@id/layout_age" />

    <LinearLayout
        android:id="@+id/layout_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_des"
            android:textColor="@color/c_ACACAC"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edt_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/info_input_info"
            android:maxLength="100"
            android:minLines="3"
            android:textColor="@color/c_ACACAC"
            android:textColorHint="@color/c_6c6c6c"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/c_4d4d4d"
        app:layout_constraintTop_toBottomOf="@id/layout_des" />

    <com.xlong.libui.TDTextView
        android:id="@+id/tv_commit"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:text="@string/info_commit"
        android:textColor="@color/c_ffffff"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:td_radius="5dp"
        app:td_solid_color="@color/c_F82E54" />

</androidx.constraintlayout.widget.ConstraintLayout>